{
  "name": "wurk2do",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Privacy-focused weekly planner with Google Drive sync",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "docker:build": "docker build -t week2do:latest .",
    "docker:run": "docker run -d -p 8080:80 --name week2do week2do:latest",
    "docker:stop": "docker stop week2do && docker rm week2do",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.6.0",
    "date-fns": "^3.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.2.0"
  },
  "keywords": [
    "weekly-planner",
    "todo",
    "productivity",
    "google-drive",
    "privacy",
    "self-hosted",
    "react",
    "vite",
    "tailwindcss"
  ]
}
